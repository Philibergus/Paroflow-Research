{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Up-to-date documentation and code examples for React, Next.js, TypeScript, Prisma, and medical APIs"
    }
  },
  "mcpConfiguration": {
    "context7": {
      "autoActivate": true,
      "preferredSources": [
        "react.dev",
        "nextjs.org", 
        "prisma.io",
        "shadcn.com",
        "tailwindcss.com",
        "zod.dev",
        "tanstack.com",
        "recharts.org",
        "xyflow.com",
        "github.com/microsoft/TypeScript"
      ],
      "medicalContext": {
        "terminology": "dental-periodontal-implantology",
        "standards": ["HIPAA", "FHIR-R4", "DICOM"],
        "specializations": [
          "periodontics",
          "implantology", 
          "dental-practice-management"
        ]
      },
      "projectSpecific": {
        "frameworkStack": [
          "React 18",
          "TypeScript",
          "Vite",
          "Prisma",
          "shadcn/ui",
          "Tailwind CSS",
          "React Query",
          "React Hook Form",
          "Zod"
        ],
        "architecturePatterns": [
          "component-based-ui",
          "form-validation",
          "database-orm",
          "api-routes",
          "medical-data-security"
        ]
      }
    }
  }
}