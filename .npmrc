# Configuration PNPM pour Paroflow
# Ce fichier empÃªche l'utilisation accidentelle de NPM

# Forcer l'utilisation de PNPM uniquement
engine-strict=true

# Optimisations PNPM
auto-install-peers=false
shamefully-hoist=true
strict-peer-dependencies=false

# Cache et performance
store-dir=~/.pnpm-store
prefer-offline=true